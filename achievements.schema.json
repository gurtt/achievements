{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"format": "uri"
		},
		"name": {
			"type": "string",
			"minLength": 1
		},
		"author": {
			"type": "string",
			"minLength": 1
		},
		"description": {
			"type": "string",
			"minLength": 1
		},
		"bundleID": {
			"type": "string",
			"minLength": 1
		},
		"version": {
			"type": "string",
			"minLength": 1
		},
		"buildNumber": {
			"type": "number",
			"minimum": 0
		},
		"achievements": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"description": "A unique ID for the achievement.",
						"minLength": 1
					},
					"name": {
						"type": "string",
						"description": "The user-facing name of the achievement.",
						"minLength": 1
					},
					"lockedDescription": {
						"type": "string",
						"description": "The user-facing description of the requirements to unlock the achievement. Displayed when the player hasn't unlocked the achievement.",
						"minLength": 1
					},
					"unlockedDescription": {
						"type": "string",
						"description": "The user-facing description of the requirements that unlocked the achievement. Displayed when the player hasn't unlocked the achievement.",
						"minLength": 1
					},
					"unlockedAt": {
						"type": "integer",
						"description": "The seconds since epoch when the achievement was unlocked. Ignored if the achievement isn't unlocked.",
						"minimum": 0
					},
					"value": {
						"type": [
							"boolean",
							"integer"
						],
						"description": "The progress of the achievement."
					}
				},
				"if": {
					"properties": {
						"value": {
							"type": "integer"
						}
					}
				},
				"then": {
					"properties": {
						"value": {
							"minimum": 0
						},
						"maxValue": {
							"type": "integer",
							"description": "For achievements where `value` is a number, the value needed to consider the achievement granted.",
							"minimum": 1
						}
					},
					"required": [
						"id",
						"name",
						"lockedDescription",
						"unlockedDescription",
						"value",
						"maxValue"
					]
				},
				"else": {
					"required": [
						"id",
						"name",
						"lockedDescription",
						"unlockedDescription",
						"value",
						"maxValue"
					]
				}
			}
		}
	},
	"required": [
		"$schema",
		"name",
		"author",
		"description",
		"bundleID",
		"version",
		"buildNumber",
		"achievements"
	]
}
